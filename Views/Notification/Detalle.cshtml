@model WebAdminScheduler.Models.CP_NOTIFICATIONS;
@{
    ViewData["Title"] = "Detalle";
}
<head>
    <link rel="stylesheet" href="~/css/clockpicker.css" />
    <link rel="stylesheet" href="~/lib/Toast/dist/jquery.toast.min.css" />
    <script src="~/js/jquery-1.11.3.min.js"></script>
    <script src="~/js/vfs_fonts.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/lib/SweetAlert/dist/sweetalert2.min.js"></script>
    <script src="~/lib/Toast/dist/jquery.toast.min.js"></script>
</head>	

    <body>
        <h1>Notificaciones</h1>
        <div class="card">
            <div class="card-body">
                <div class="row g-4 align-items-center">
                    <div class="col-auto">
                        <label class="form-check-label" for="Recipients">
                            Recipients
                        </label>
                    </div>
                    <div class="col-auto">
                        <div class="col-lg-12">
                            <input type="text" class="form-control" 
                            data-placement="right" data-align="top" name="lblRecipients" id="lblRecipients" data-autoclose="true" disabled>
                        </div>
                    </div>
                    
                    <div class="col-auto">
                        <label class="form-check-label" for="NotifySuccess">
                            Notify Success
                        </label>
                    </div>
                    
                    <div class="col-auto">
                        <select class="form-select" name="lblNotifySuccess" id="lblNotifySuccess" disabled>
                            <option value="0">0</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                    
                    <div class="col-auto">
                        <label class="form-check-label" for="lblNotifyFailure">
                            Notify Failure
                        </label>
                    </div>

                    <div class="col-auto">
                        <select class="form-select" name="lblNotifyFailure" id="lblNotifyFailure" disabled>
                            <option value="0">0</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                </div>
                <br />

                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="row g-4 align-items-center">
                        <div class="col-auto">
                            <label class="form-check-label" for="lblName">
                                Name
                            </label>
                        </div>

                        <div class="col-auto">
                            <input type="text" min="1" class="form-control" data-placement="right" data-align="top" data-autoclose="true" id="lblName" name="lblName" disabled>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a id="btnSave" class="btn btn-primary">Guardar</a>
            </div>
        </div>
    </body>

<script> 
    var params={};
    var idnotif="@ViewBag.IDNOTIF";

    var recipients = "@Model.RECIPIENTS";
    var notify_success = "@Model.NOTIFYSUCCESS";
    var notify_failure = "@Model.NOTIFYFAILURE";
    var name = "@Model.NAME";

    console.log("recipients", recipients);
    console.log("notify_success", notify_success);

    $(document).on("ready",function() {
        $("#lblRecipients").val(recipients);
        $("#lblNotifySuccess").val(notify_success);
        $("#lblNotifyFailure").val(notify_failure);
        $("#lblName").val(name);
    });
</script>